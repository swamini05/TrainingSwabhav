@model IEnumerable<ContactAppMiniProject.Models.User>

@{
    ViewBag.Title = "AdminDashboard";
}
<div class="d-flex justify-content-between align-items-center">
    <h2>Admin Dashboard</h2>
    <a href="@Url.Action("Create", "User")" class="btn btn-primary">Create Users</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.IsAdmin)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <input type="checkbox" class="isActiveCheckbox" data-user-id="@item.Id" @(item.IsActive ? "checked" : "") />
                </td>
                @*<td>@Html.DisplayFor(modelItem => item.IsAdmin)</td>*@
            <td>
                <input type="checkbox" class="isAdminCheckbox" data-user-id="@item.Id" @(item.IsAdmin ? "checked" : "") />
            </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details","UserDashboard", "Contact", new { id = item.Id },null) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('.isActiveCheckbox').change(function () {
            var userId = $(this).data('user-id');
            var isActive = $(this).is(':checked');

            $.ajax({
                url: '@Url.Action("UpdateIsActiveStatus", "User")',
                type: 'POST',
                data: {
                    userId: userId,
                    isActive: isActive
                },
                success: function (response) {
                    if (response.success) {
                        alert('Status updated successfully!');
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function () {
                    alert('Error updating status.');
                }
            });
        });

        $('.isAdminCheckbox').change(function () {
            var userId = $(this).data('user-id');
            var isAdmin = $(this).is(':checked');

            $.ajax({
                url: '@Url.Action("UpdateIsAdminStatus", "User")',
                type: 'POST',
                data: {
                    userId: userId,
                    isAdmin: isAdmin
                },
                success: function (response) {
                    if (response.success) {
                        alert('Admin status updated successfully!');
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function () {
                    alert('Error updating admin status.');
                }
            });
        });
    });
</script>

<style>
